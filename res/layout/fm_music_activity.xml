<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                android:orientation = "horizontal"
                android:layout_width = "match_parent"
                android:layout_height = "match_parent">

    <ImageView
            android:id = "@+id/tv_fc_logo"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:background = "@drawable/qingting_small"
            android:layout_marginLeft = "14dp"/>

    <TextView
            android:id = "@+id/tv_fc_name"
            android:layout_width = "wrap_content"
            android:layout_height = "60dp"
            android:layout_toRightOf = "@id/tv_fc_logo"
            android:text = "asdf"
            style = "@style/default_text_size"
            android:gravity = "center_vertical"
            android:layout_marginLeft = "10dp"/>

    <ImageView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:src = "@drawable/fm_icon"
            android:layout_toRightOf = "@id/tv_fc_name"
            android:layout_alignParentRight = "true"/>

</RelativeLayout>