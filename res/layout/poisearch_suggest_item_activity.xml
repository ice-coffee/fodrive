<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                android:layout_width = "match_parent"
                android:layout_height = "60dp">

    <ImageView
            android:id = "@+id/iv_search_item"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_centerVertical = "true"
            android:background = "@drawable/history_icon"
            android:layout_marginLeft = "14dp"/>

    <View
            android:layout_width = "1dp"
            android:layout_height = "84dp"/>

    <LinearLayout
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_toRightOf = "@id/iv_search_item"
            android:layout_toLeftOf = "@+id/iv_right_arrow"
            android:layout_marginLeft = "10dp"
            android:layout_marginRight = "10dp"
            android:layout_centerVertical = "true"
            android:orientation = "vertical">

        <TextView
                android:id = "@+id/tv_search_itme_name"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "asdfasdf"
                style = "@style/default_text_size"
                android:textColor = "@color/black"/>

    </LinearLayout>

    <ImageView
            android:id = "@+id/iv_right_arrow"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginRight = "14dp"
            android:background = "@drawable/right_arrow"
            android:layout_alignParentRight = "true"
            android:layout_centerVertical = "true"/>

</RelativeLayout>