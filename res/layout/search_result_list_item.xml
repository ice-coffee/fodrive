<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                android:id = "@+id/rl_navi_search_item"
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:background = "@color/general_title_color">

    <LinearLayout
            android:visibility = "visible"
            android:layout_width = "match_parent"
            android:layout_height = "70dp"
            android:background = "@color/general_title_color"
            android:orientation = "horizontal">

        <TextView
                android:id = "@+id/tv_address_number"
                android:layout_width = "22dp"
                android:layout_height = "22dp"
                android:background = "@drawable/address_number_icon"
                android:layout_gravity = "center_vertical"
                android:gravity = "center"
                android:textColor = "@color/white"
                android:layout_marginLeft = "14dp"/>

        <LinearLayout
                android:layout_width = "1dp"
                android:layout_height = "match_parent"
                android:layout_weight = "1">

            <LinearLayout
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:orientation = "vertical"
                    android:layout_gravity = "center_vertical"
                    android:layout_marginLeft = "10dp">

                <TextView
                        android:id = "@+id/et_search_name"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:text = "@string/search_restlt"
                        android:singleLine = "true"
                        android:ellipsize = "end"
                        style = "@style/default_text"/>

                <TextView
                        android:id = "@+id/et_search_address"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        style = "@style/address_text"
                        android:singleLine = "true"
                        android:ellipsize = "end"
                        android:layout_marginRight = "10dp"
                        android:layout_marginTop = "9dp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
                android:layout_width = "1dp"
                android:layout_height = "60dp"
                android:layout_gravity = "center"
                android:background = "@color/white"/>

        <RelativeLayout
                android:layout_width = "119dp"
                android:layout_height = "match_parent">

            <LinearLayout
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_centerInParent = "true">

                <TextView
                        android:id = "@+id/tv_save_search_home"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_weight = "1"
                        android:text = "@string/save"
                        android:textColor = "@color/white"
                        android:drawableTop = "@drawable/collection_address_mini_icon_1"
                        android:drawablePadding = "2dp"/>

                <TextView
                        android:id = "@+id/tv_save_search_company"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_weight = "1"
                        android:text = "@string/save"
                        android:textColor = "@color/white"
                        android:drawableTop = "@drawable/collection_address_mini_icon_2"
                        android:drawablePadding = "2dp"
                        android:layout_marginLeft = "36dp"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>