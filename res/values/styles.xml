    <style name = "default_text">

        <item name = "android:textSize">18sp</item>
        <item name = "android:textColor">@color/white</item>

    </style>

    <style name = "address_text">

        <item name = "android:textSize">15sp</item>
        <item name = "android:textColor">@color/white</item>

    </style>

    <!--标题格式-->
    <style name = "title_text">

        <item name = "android:textSize">20sp</item>
        <item name = "android:textColor">@color/white</item>

    </style>

    <style name = "default_text_size">

        <item name = "android:textSize">18sp</item>

    </style>

    <style name = "default_text_color">

        <item name = "android:textColor">@color/white</item>

    </style>

    <style name = "prompt_text">

        <item name = "android:textColor">@color/text_color</item>
        <item name = "android:textSize">18sp</item>

    </style>

    <!--大按钮-->
    <style name = "big_button_type">

        <item name = "android:layout_gravity">center_horizontal</item>
        <item name = "android:gravity">center</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_marginLeft">14dp</item>
        <item name = "android:layout_marginRight">14dp</item>
        <item name = "android:textSize">18sp</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:background">@drawable/selector_big_button</item>
        <item name = "android:singleLine">true</item>

    </style>

    <!--<style name="open_button_type">-->

    <!--<item name="android:textSize">18sp</item>-->
    <!--<item name="android:background">@drawable/button</item>-->

    <!--</style>-->

    <!--小按钮-->
    <style name = "small_button_type">

        <item name = "android:textSize">18sp</item>
        <item name = "android:background">@drawable/selector_small_button</item>
        <item name = "android:textColor">@color/white</item>

    </style>

    <!--设置输入框格式-->
    <style name = "edit_type">

        <item name = "android:textSize">18dp</item>
        <item name = "android:paddingLeft">10dp</item>
        <item name = "android:paddingRight">10dp</item>
        <item name = "android:layout_marginLeft">14dp</item>
        <item name = "android:layout_marginRight">14dp</item>
        <item name = "android:layout_marginTop">18dp</item>
        <item name = "android:background">@drawable/text_box</item>
        <item name = "android:singleLine">true</item>
        <item name = "android:ellipsize">middle</item>
        <item name = "android:drawablePadding">10dp</item>
        <item name = "android:padding">10dp</item>

    </style>

    <style name = "small_edit_type">

        <item name = "android:textSize">18dp</item>
        <item name = "android:paddingLeft">10dp</item>
        <item name = "android:paddingRight">10dp</item>
        <item name = "android:layout_marginLeft">14dp</item>
        <item name = "android:layout_marginRight">14dp</item>
        <item name = "android:layout_marginTop">18dp</item>
        <item name = "android:background">@drawable/text_box_small</item>
        <item name = "android:singleLine">true</item>
        <item name = "android:ellipsize">middle</item>
        <item name = "android:drawablePadding">10dp</item>
        <item name = "android:padding">10dp</item>

    </style>

    <!--导航模块输入框格式-->
    <style name = "navi_edit_type">

        <item name = "android:textSize">18sp</item>
        <item name = "android:background">@drawable/daohang_search</item>
        <item name = "android:singleLine">true</item>
        <item name = "android:ellipsize">middle</item>

    </style>
</resources>


